<div class="not-prose relative rounded-xl overflow-hidden">
  <div style="background-position:10px 10px" class="absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,#fff,rgba(255,255,255,0.6))] dark:bg-grid-slate-700/25 dark:[mask-image:linear-gradient(0deg,rgba(255,255,255,0.1),rgba(255,255,255,0.5))]"></div>
  <div class="relative rounded-xl overflow-auto">
    <div class="shadow-sm overflow-hidden my-8">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl"><%= page_title %></h1>
      <%= link_to 'New Post', new_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>
    <table class="bg-white border-collapse table-fixed w-full text-sm mt-4">
      <thead class="bg-gray-100">
        <tr>
          <th class=" font-large p-4 pl-8 pb-3 text-slate-1000 text-left">Title</th>
          <th class=" font-large p-4 pb-3 text-slate-1000 text-left">User</th>
          <th class=" font-large p-4 pr-8 pb-3 text-slate-1000 text-left">Status</th>
          <th class=" font-large p-4 pr-8 pb-3 text-slate-1000 text-left">Action</th>
        </tr>
      </thead>
      <tbody>
        <%= render @posts %>
      </tbody>
    </table>
    </div>
  </div>
  <div class="absolute inset-0 pointer-events-none border border-black/5 rounded-xl dark:border-white/5"></div>
</div>
   
