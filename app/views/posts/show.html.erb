    <!-- Image gallery -->
    <div class="mx-auto mt-6 w-full post-video">
      <%= @post.video_url.html_safe %>
    </div>

    <!-- Product info -->
    <div class="px-4 pt-10 pb-16 ">
      <div class="lg:col-span-2 lg:pr-8">
        <h1 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl"><%= @post.title %></h1>
      </div>



      <div class="py-10 lg:col-span-2 lg:col-start-1 lg:pt-6 lg:pb-16 lg:pr-8">
        <h3 class="sr-only">Description</h3>

        <div class="space-y-6">
          <p class="text-base text-gray-900"><%= @post.content %></p>
        </div>
      </div>




          <h1>Related Posts</h1>
          <div class="grid grid-cols-2 gap-2">
            <% if Post.previous(@post.id).present? %>
              <div class="previous-post">
                <h2> Previous Post </h2>
                <%= image_tag @post.image_url.url %>
              </div>
            <% end %>
            <% if Post.next(@post.id).present? %>
              <div class="next-post">
                <h2> Next Post </h2>
                <%= image_tag @post.image_url.url %>
                </div>
            <% end %>
      </div>
